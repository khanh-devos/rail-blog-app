<%= form_with model: comment, url: comment_create_path(user_id: @current_user.id, id: @post.id), method: 'post', local: true, scope: :comment do |form| %>

  <div>
    <%= form.label :comment, style: "display: block" %>
    <%= form.text_area :text, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>