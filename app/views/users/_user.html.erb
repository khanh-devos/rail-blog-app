<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Photo:</strong>
    <%= link_to user.photo.filename, user.photo if user.photo.attached? %>
  </p>

  <p>
    <strong>Bio:</strong>
    <%= user.bio %>
  </p>

  <p>
    <strong>Postcounter:</strong>
    <%= user.postCounter %>
  </p>

</div>
